<div class="card" style="width: 20rem;">
	{{#if poster_path}}
	<img class="card-img-top" src="http://image.tmdb.org/t/p/w342/{{poster_path}}" alt="Card image cap">
	{{else}}
  <img class="card-img-top" src="images/noposter.jpg" alt="Card image cap">
  {{/if}}
  <div class="card-block">
    <h4 class="card-title">{{title}}</h4>
    <p class="card-text">{{overview}}</p>
  </div>
  <ul class="list-group list-group-flush">
  	{{#each castList}}
    <li class="list-group-item">{{name}}</li>
    {{/each}}
  </ul>
  <div class="card-block">
    <a href="#" onclick="return false" class="card-link">Add to Watchlist</a>
  </div>
</div>
